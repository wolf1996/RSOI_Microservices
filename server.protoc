syntax  = "proto3";

message EventInfo{
    int64 id = 1;
    string name = 2;
    int64 participants = 3;
    string description = 4;
}

message Empty{}

message EventId{
    int64 id = 1;
}

message EventsRequest{
    int64 userId = 1;
    int64 pageSize = 2;
    int64 pageNumber = 3;
}

service EventService {
    rpc GetEventInfo(EventId) returns (EventInfo){};
    rpc IncrementUsersNumber(EventId) returns (EventInfo){};
    rpc DecrementUsersNumber(EventId) returns (EventInfo){};
    // rpc GetEvents(stream EventId) returns (stream EventInfo){};
}

